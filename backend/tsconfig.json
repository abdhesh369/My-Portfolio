{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["**/*.ts", "../shared/**/*.ts"],
  "exclude": ["dist"]
}
